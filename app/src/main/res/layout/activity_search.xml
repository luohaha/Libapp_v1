<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_back"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/headbar_blue"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/activity_search_edittext"
            android:layout_width="300dip"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/activity_search_button"
            android:layout_gravity="left"
            android:hint="请输入您要搜索的书名~~"
            android:typeface="monospace"/>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/activity_search_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text=""
            bootstrap:bb_icon_left="fa-search"
            bootstrap:bb_type="info"
            bootstrap:bb_size="small">

            </com.beardedhen.androidbootstrap.BootstrapButton>
        </LinearLayout>
    <ListView
        android:id="@+id/activity_search_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        </ListView>
</LinearLayout>