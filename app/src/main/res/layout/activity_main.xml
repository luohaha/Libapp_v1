<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

  <!--  <com.example.root.mytopbar.TopBar
        android:layout_width="match_parent"
        android:layout_height="40dip">

        </com.example.root.mytopbar.TopBar> -->
    <com.example.root.libapp_v1.HeadBar.HeadBar
        android:id="@+id/head_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        </com.example.root.libapp_v1.HeadBar.HeadBar>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_weibo_listab">

        <RadioButton
            style="@style/weibo_tab"
            android:id="@+id/radiobution_1"
            android:drawableTop="@drawable/weibolist_attention_selector"
            android:text="飞书馆" />

        <RadioButton
            style="@style/weibo_tab"
            android:id="@+id/radiobution_3"
            android:drawableTop="@drawable/weibolist_comment_selector"
            android:text="阅览室" />

        <RadioButton
            style="@style/weibo_tab"
            android:id="@+id/radiobution_5"
            android:drawableTop="@drawable/weibolist_global_selector"
            android:text="扫一扫" />

        <RadioButton
            style="@style/weibo_tab"
            android:id="@+id/radiobution_2"
            android:drawableTop="@drawable/weibolist_atme_selector"
            android:text="书友会" />

        <RadioButton
            style="@style/weibo_tab"
            android:id="@+id/radiobution_4"
            android:drawableTop="@drawable/weibolist_mylist_selector"
            android:text="我的" />

    </RadioGroup>
</LinearLayout>