<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout

    android:orientation="vertical"
    android:background="@color/card_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.root.libapp_v1.HeadBar.HeadBar
        android:id="@+id/userregister_head_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.root.libapp_v1.HeadBar.HeadBar>

    <!--first block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_back"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-paperclip"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="帐号"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_account_number"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="只包含字母和数字"
                android:textSize="18sp"
                android:layout_marginBottom="10dip"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                android:gravity="center"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>

    <!--the second block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-pencil-square-o"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="姓名"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_username"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="您的昵称"
                android:layout_marginBottom="10dip"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>

    <!--the third block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-pencil-square-o"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="密码"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_password"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="位数不能少于8位"
                android:layout_marginBottom="10dip"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>

    <!--the fourth block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-pencil-square-o"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="地址"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_address"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="您的详细地址"
                android:layout_marginBottom="10dip"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>

    <!--the firth block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-pencil-square-o"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="电子邮箱"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_mailbox"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="您的电子邮箱"
                android:layout_marginBottom="10dip"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>

    <!--sixth block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-pencil-square-o"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="电话号码"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_phone"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="您的电话号码"
                android:layout_marginBottom="10dip"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>

    <!--seven block-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                fontawesometext:fa_icon="fa-pencil-square-o"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="个性签名"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/card_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/userregister_quote"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="您的个性签名"
                android:layout_marginBottom="10dip"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:typeface="sans"
                bootstrapbutton:be_roundedCorners="false"
                bootstrapbutton:be_state="warning"
                />
        </LinearLayout>
    </LinearLayout>
    <!--button block-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/userregister_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="4"
            android:text="完成"
            bootstrap:bb_icon_left="fa-upload"
            bootstrap:bb_type="default"
            bootstrap:bb_size="large"
            />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/userregister_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="置空"
            bootstrap:bb_icon_left="fa-trash"
            bootstrap:bb_type="default"
            bootstrap:bb_size="large"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
